<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView android:id="@+id/glory_news_list_view_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:autoLink="all"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:text="[Hello World]"
        android:maxLines="2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show More"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        android:id="@+id/glory_news_list_view_item_text_view_expander"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/glory_news_list_view_item_text_view"/>

    <View android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/com_facebook_messenger_blue"
        android:layout_below="@id/glory_news_list_view_item_text_view_expander"
        />
</RelativeLayout>