<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="10dp" android:paddingBottom="10dp">

    <ImageView android:id="@+id/team_list_view_item_photo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/shantanu"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <RelativeLayout android:layout_centerVertical="true"
        android:layout_toRightOf="@id/team_list_view_item_photo"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/team_list_view_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Name]"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView android:id="@+id/team_list_view_item_designation_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_list_view_item_name"
            android:textSize="20dp"
            android:text="[Designation]"/>
    </RelativeLayout>
</RelativeLayout>